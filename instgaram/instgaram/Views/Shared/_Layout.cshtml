<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
    </style>
    <link href="~/Content/StyleForLayout.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background:#09517a;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{if (Session["Userid"] == "0")
                    {
                        @Html.ActionLink("Instgram", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("Instgram", "Index", "Porfile", new { area = "" }, new { @class = "navbar-brand" })
                    }
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{ if (Session["Userid"] != "0")
                        {
                            //<li> @Html.ActionLink("Sugge", "allpersons", "porfile")</li>
                            //<li> @Html.ActionLink("Requsts", "my_re", "porfile")</li>
                            //<li> @Html.ActionLink("Followers", "friendsRe", "porfile")</li>
                            <li style="margin-left:150px;font-size:22px">
                                 @Html.ActionLink("Add Post", "addpost", "porfile")
                            </li>
                            <li style="font-size:22px;"> @Html.ActionLink("Edit Profile", "incom_requst", "porfile")</li>
                            <li style="margin-left:500px;text-decoration:none;
                                       font-size:25px;font-family:Andalus;">
                                @Html.ActionLink("LogOut", "Index", "Home")
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="bodyPages">
        @RenderBody()
    </div>

    @*<div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - Instagram Application</p>
        </footer>
    </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
